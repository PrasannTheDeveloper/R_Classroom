<Window x:Class="WpfApp3.RPathSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="R Executable Path Settings" Height="300" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Define colors -->
        <SolidColorBrush x:Key="HeaderBackground" Color="MediumAquamarine"/>
        <SolidColorBrush x:Key="WindowBorder" Color="Gray"/>
        <SolidColorBrush x:Key="Button1Background" Color="#FFB6B6"/>
        <SolidColorBrush x:Key="Button2Background" Color="#AFEEEE"/>
        <SolidColorBrush x:Key="Button3Background" Color="Gray"/>
        <SolidColorBrush x:Key="Button4Background" Color="AntiqueWhite"/>

        <!-- Button style -->
        <Style x:Key="CustomButton" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource WindowBorder}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main window border -->
    <Border BorderBrush="{StaticResource WindowBorder}" 
            BorderThickness="2" 
            Background="White"
            CornerRadius="5">
        <Grid>
            <!-- Title bar for dragging -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" 
                    CornerRadius="5,5,0,0" 
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <TextBlock Text="R Executable Path Settings" 
                           FontSize="16" FontWeight="Bold" 
                           Margin="15,10" 
                           Foreground="Black"/>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Configure R Installation Path" FontSize="16" FontWeight="Bold" Margin="0,20,0,15"/>

                <TextBlock Text="Specify the path to your R executable (Rscript.exe or R.exe):" 
                           Margin="0,0,0,10" TextWrapping="Wrap"/>

                <TextBox x:Name="PathTextBox" Grid.Row="2" Margin="0,0,0,10" Height="25" 
                         FontFamily="Consolas" Padding="5"/>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Browse..." Width="100" Height="30" Margin="0,0,10,0" 
                            Click="BrowseButton_Click"
                            Background="{StaticResource Button1Background}"
                            Style="{StaticResource CustomButton}"/>
                    <Button Content="Test Path" Width="100" Height="30" Margin="0,0,10,0" 
                            Click="TestButton_Click"
                            Background="{StaticResource Button2Background}"
                            Style="{StaticResource CustomButton}"/>
                    <Button Content="OK" Width="80" Height="30" Margin="0,0,10,0" 
                            IsDefault="True" Click="OKButton_Click"
                            Foreground="White"
                            Background="{StaticResource Button3Background}"
                            Style="{StaticResource CustomButton}"/>
                    <Button Content="Cancel" Width="80" Height="30" IsCancel="True" 
                            Click="CancelButton_Click"
                            Background="{StaticResource Button4Background}"
                            Style="{StaticResource CustomButton}"/>
                </StackPanel>

                <TextBlock Grid.Row="4" Text="R not found? Download it from the official R website:" 
                           Margin="210,15,0,5" FontWeight="SemiBold" Foreground="#DC3545"/>

                <Button Grid.Row="5" Content="Download R for Windows" Width="200" Height="30" 
                        HorizontalAlignment="Left" Background="#28A745" Foreground="White" 
                        BorderThickness="0" Click="DownloadButton_Click"
                        Style="{StaticResource CustomButton}"/>
            </Grid>
        </Grid>
    </Border>
</Window>