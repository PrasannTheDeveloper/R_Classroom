<Window x:Class="WpfApp3.RenameTabDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Tab" Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Rounded Button Style -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Rounded Window Border -->
    <Border CornerRadius="15" BorderBrush="Gray" BorderThickness="2" Background="White"
            MouseDown="Border_MouseDown">

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Heading -->
            <TextBlock Text="Enter new tab name:"
                       Margin="0,10,0,10"
                       Foreground="DimGray"
                       Background="MediumAquamarine"
                       FontWeight="Bold"
                       FontSize="14"/>

            <!-- Input -->
            <TextBox x:Name="NameTextBox" Grid.Row="1"
                     Margin="0,0,0,15"
                     Height="25"
                     BorderBrush="Gray"
                     BorderThickness="1"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK"
                        Width="80" Height="30"
                        Margin="0,0,10,0"
                        IsDefault="True"
                        Click="OKButton_Click"
                        Background="#FFB6B6"
                        BorderBrush="Gray"
                        BorderThickness="1"/>
                <Button Content="Cancel"
                        Width="80" Height="30"
                        IsCancel="True"
                        Click="CancelButton_Click"
                        Background="#AFEEEE"
                        BorderBrush="Gray"
                        BorderThickness="1"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
